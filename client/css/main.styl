@import url('http://fonts.googleapis.com/css?family=PT+Sans:400,700')
@import vars

/* general
========== */

html, button, input, select, textarea
  color: #22

body
  font: 14px "PT Sans", sans-serif
  margin: 0 auto
  background: #f6f8f8

::-moz-selection
  background: #b3d4fc
  text-shadow: none

::selection
  background: #b3d4fc
  text-shadow: none

hr
  display: block
  height: 1px
  border: 0
  border-top: 1px solid #dee7e9
  margin: 1em 0
  padding: 0

img
  vertical-align: middle

fieldset
  border: 0
  margin: 0
  padding: 0

textarea
  resize: vertical

.chromeframe
  margin: 0.2em 0
  background: #dee7e9
  color: #000
  padding: 0.2em 0

a
  color: blue-accent
  text-decoration: none

a:hover
  text-decoration: underline

h2
  font-size: 18px
  font-weight: 300
  margin-top: 0

input
  font-family: "PT Sans", sans-serif
  outline: none

/* helper classes
================= */
.ir
  background-color: transparent
  border: 0
  overflow: hidden
  *text-indent: -9999px

.ir:before
  content: ''
  display: block
  width: 0
  height: 150%

.pull-left
  display: inline-block!important
  float: left!important

.pull-right
  display: inline-block!important
  float: right!important

.hidden
  display: none!important
  visibility: hidden

.visuallyhidden
  border: 0
  clip: rect(0 0 0 0)
  height: 1px
  margin: -1px
  overflow: hidden
  padding: 0
  position: absolute
  width: 1px

.visuallyhidden.focusable:active, .visuallyhidden.focusable:focus
  clip: auto
  height: auto
  margin: 0
  overflow: visible
  position: static
  width: auto

.invisible
  visibility: hidden

.clearfix:before, .clearfix:after
  content: ''
  display: table

.clearfix:after
  clear:both

.clearfix
  *zoom: 1